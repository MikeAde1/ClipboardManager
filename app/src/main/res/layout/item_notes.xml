<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.clipboardmanager.utils.CustomDateUtils"/>
        <variable name="position" type="Integer"/>
        <variable name="clipModel"
                  type="com.example.clipboardmanager.service.model.ClipboardEntity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/copied_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@{clipModel.note}"
            tools:targetApi="jelly_bean"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{CustomDateUtils.format(clipModel.date)}"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="5dp"
              android:padding="3dp"
              android:textColor="#FF7A22"
              android:id="@+id/time"/>
</LinearLayout>
</layout>
